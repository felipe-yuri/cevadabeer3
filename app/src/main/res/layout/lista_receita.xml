<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageTampa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:srcCompat="@drawable/ictampapreta" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNomeCervejaReceita"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nome Cerveja"
                android:textAllCaps="true"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEstilo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estilo: " />

                <TextView
                    android:id="@+id/tvEstiloVar"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Weiss" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvComplexidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complexidade: " />

                <TextView
                    android:id="@+id/tvComplexidadeVar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Simples" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <Space
            android:layout_width="3dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btDetalhes"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:shadowColor="#ffffff"
            android:text="Detalhes"
            android:textColor="#ffffff" />

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imgLess"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_indeterminate_check_box_black_24dp" />

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edQuantidadeReceitaVar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edit_text"
            android:ems="2"
            android:inputType="number"
            android:text="00"
            android:gravity="center"
            />

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btProduzir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produzir"
            android:background="@drawable/shape_button"
            android:textColor="#ffffff"
            />

    </LinearLayout>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffffff" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000" />

</LinearLayout>